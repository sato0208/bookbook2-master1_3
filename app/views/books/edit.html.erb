<!-- これはbookの編集画面 -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>book_edit</title>
  <link rel="stylesheet" href="">
</head>
<body>

  <!-- ここにform_forを追加します -->
  <%= form_for(@book)do |f| %>
    <!-- 空白で投稿された場合エラーメッセージを表示させる -->
    <% if @book.errors.any? %>
      <div class="alert alert-danger">
          <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
          <% @book.errors.full_messages.each do |message| %>
          <%= message %>
          <% end %>
      </div>
    <% end %>
    <!-- エラーメッセージここまで -->

    <!-- book投稿の編集フォーム -->
    <div class="container">
    <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

          <h1>Editing Book</h1>
          <div class="form-body">
            <div class="form-group">
              <%= f.label :title,"title"%>
              <%= f.text_field :title, autofocus: true, class:"form-control",pracholder:"タイトル" %>
            </div>

            <div class="form-group">
              <!-- bodyフォーム -->
              <%= f.label :body,"body"%>
              <%= f.text_area :body, class:"form-control", pracholder:"body"%>
            </div>
              <%= f.submit "Update Book", class:"btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= link_to"Show",book_path(@book.id) %>
          |
          <a class="back" href="/books">Back</a>

    </div>
    </div>
    </div>

</body>
</html>
