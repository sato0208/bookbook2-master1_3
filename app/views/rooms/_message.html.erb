
<% if @messages.present? %>
<table class="table">
	<thead>
		<tr>
			<th>body</th>
			<th>name</th>
		</tr>
	</thead>
	<tbody>
		
  <% @messages.each do |m| %>
    <tr><td><strong><%= m.content %></strong></td>
    <td><small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></strong></small></td>
    <tr>
  <% end %>
<% else %>
<tr>
  <h3 class="text-center">メッセージはまだありません</h3>
</tr>
<% end %>
	</tbody>
</table>